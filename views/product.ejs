<!DOCTYPE html>
<html>
<head>
    <title><%= headTitle %></title>
    <link rel="stylesheet" href="/css/main.css" />
</head>
<body>
    <main>
        <%- include('partials/navigation', { menuLinks: menuLinks, activeLinkPath: activeLinkPath }); %>
        
        
        <h1 class="heading"><%= product.name %></h1>
        
        
        <div class="product-description">
            <%= product.description %>
        </div>
        
        
        <button 
            class="button delete-btn"
            onclick="deleteProduct('<%= product.name %>')">
            Delete
        </button>
    </main>

    
    <script>
        function deleteProduct(name) {
            if (confirm(`Delete product "${name}"?`)) {
                fetch(`/products/${name}`, { method: 'DELETE' })
                .then(response => response.ok && (window.location.href = '/products'))
                .catch(() => alert('Deletion failed'));

            }
        }
    </script>
</body>
</html>